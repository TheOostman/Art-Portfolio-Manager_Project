<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>


<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.groupassessment.MainController">

  <HBox AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="1000.0" style="-fx-background-color: lightgrey;" >

    <VBox spacing="10" style="-fx-padding: 40 0 0 30;">
      <Label fx:id="usernameTest" text="NOT SIGNED IN" maxWidth="150" maxHeight="10"/>
      <Button fx:id="profileButton" maxWidth="150" maxHeight="10" text="View Profile" onAction="#viewProfileClick" />
    </VBox>

  </HBox>
  <HBox AnchorPane.topAnchor="250" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="1000.0" style="-fx-background-color: lightgrey;">
    <VBox spacing="10" style="-fx-padding: 20 0 0 30;">
      <Label text="Username"/>
      <TextField fx:id="usernameEntry"/>
      <Label text="Password"/>
      <TextField fx:id="passwordEntry"/>
      <Button fx:id="signinRegister" maxWidth="150" maxHeight="10" text="SIGNIN / REGISTER" onAction="#signInRegisterBn" />
    </VBox>
  </HBox>



</AnchorPane>
