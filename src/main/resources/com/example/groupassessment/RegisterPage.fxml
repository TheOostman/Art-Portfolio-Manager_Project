<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.groupassessment.MainController" style="-fx-background-color: gray">

  <HBox>
    <VBox>
      <AnchorPane>
        <VBox spacing="10" prefWidth="400" prefHeight="400" style="-fx-padding: 90 0 0 50; -fx-background-color: lightblue;" AnchorPane.leftAnchor="300" AnchorPane.topAnchor="200">
          <Label text="Username"/>
          <TextField fx:id="usernameEntry" prefWidth="200" maxWidth="200"/>
          <Label text="Password"/>
          <TextField fx:id="passwordEntry" prefWidth="200" maxWidth="200"/>
          <Label text="Email Address"/>
          <TextField fx:id="emailAddressEntry" prefWidth="200" maxWidth="200"/>
          <Label text="Your Role"/>
          <TextField fx:id="roleEntry" prefWidth="200" maxWidth="200"/>
          <HBox>
            <Button maxWidth="150" prefWidth="100" maxHeight="10" text="SIGN IN PAGE" onAction="#toSignInBn" />
            <Button text="REGISTER" maxWidth="150" prefWidth="100" maxHeight="10" onAction="#registerInfo"/>
          </HBox>
        </VBox>
        <VBox AnchorPane.topAnchor="227" AnchorPane.leftAnchor="388">
          <Label text="REGISTER PAGE" style="-fx-font-weight: bold; -fx-font-size: 30px;"/>
        </VBox>
        <VBox AnchorPane.topAnchor="225" AnchorPane.leftAnchor="390">
          <Label text="REGISTER PAGE" style="-fx-font-weight: bold; -fx-font-size: 30px; -fx-text-fill: #FF6600;"/>
        </VBox>
      </AnchorPane>
    </VBox>

  </HBox>


</AnchorPane>
